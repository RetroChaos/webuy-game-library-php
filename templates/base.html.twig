<!DOCTYPE html>
<html lang="en-gb">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}CEX Tool{% endblock %}</title>
        {% block css %}
            <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet" type="text/css" />
            <link href="{{ asset('css/style.css') }}" rel="stylesheet" type="text/css" />
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css" integrity="sha512-1sCRPdkRXhBV2PBLUdRb4tMg1w2YPf37qatUFeS7zlBy7jJI8Lf4VHwWfZZfpXtYSLy85pkm9GaYVYMfw5BC1A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        {% endblock %}
        {% block js %}
            <script src="{{ asset('js/bootstrap.bundle.min.js') }}"></script>
            <script src="{{ asset('js/jquery-3.6.0.min.js') }}"></script>
            <script src="{{ asset('js/global.js') }}"></script>
        {% endblock %}
    </head>
    <body>
        <div class="container">
            {% block body %}{% endblock %}
        </div>

        <!--Side Nav-->
        <nav class="vertical-nav">
            <ul class="icon-menu d-none d-lg-block">
                <li class="icon-box">
                    <i class="fa fa-solid fa-home"></i>
                    <a href="{{ path('app_collection_all') }}">
                        <h2>Collection</h2>
                    </a>
                </li>
                <li class="icon-box">
                    <i class="fa fa-solid fa-magnifying-glass"></i>
                    <a href="{{ path('app_search') }}">
                        <h2>Search</h2>
                    </a>
                </li>
            </ul>
        </nav>

        <!--Scroll To Top-->
        <a href="#top" id="scrollToTop" title="Scroll To Top"><i class="fas fa-arrow-up"></i></a>
    </body>
</html>
