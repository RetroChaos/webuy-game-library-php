{% extends 'base.html.twig' %}

{% set title = "Search" %}

{% block css %}
	{{ parent() }}
{% endblock %}

{% block js %}
	{{ parent() }}
{% endblock %}

{% block body %}
	<div class="row mt-3">
		<div>
			<form method="POST" action="{{ path('app_search_results') }}">
				<label class="form-label" for="searchQuery">Enter a Search Query</label>
				<input class="form-control mb-3" id="searchQuery" name="searchQuery" type="text" />
				<input class="btn btn-primary mb-3" type="submit" value="Submit" />
			</form>
		</div>
	</div>
{% endblock %}