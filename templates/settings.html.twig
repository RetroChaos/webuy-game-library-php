{% extends 'base.html.twig' %}

{% set title = "Settings" %}

{% block css %}{{ parent() }}{% endblock %}

{% block js %}{{ parent() }}{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-lg-2 col-md-4 d-none d-md-block">
			<div class="card bg-dark">
				<div class="card-body">
					<nav class="nav flex-column nav-pills nav-gap-y-1">
						<a href="#systemInformation" data-toggle="tab" class="nav-item nav-link has-icon nav-link-faded active"><i class="fas fa-computer" style="width: 20px; height: 20px"></i> System Information</a>
						<a href="#generalSettings" data-toggle="tab" class="nav-item nav-link has-icon nav-link-faded"><i class="fas fa-sliders-h" style="width: 20px; height: 20px"></i> General Settings</a>
					</nav>
				</div>
			</div>
		</div>

		<div class="col-lg-10 col-md-8">
			<div class="card bg-dark text-white">
				<div class="card-header border-bottom mb-3 d-flex d-md-none">
					<ul class="nav nav-tabs card-header-tabs" role="tablist">
						<li class="nav-item">
							<a href="#systemInformation" data-toggle="tab" class="nav-link has-icon active"><i class="fas fa-computer"></i></a>
						</li>
						<li class="nav-item">
							<a href="#generalSettings" data-toggle="tab" class="nav-link has-icon"><i class="fas fa-sliders-h"></i></a>
						</li>
					</ul>
				</div>

				<div class="card-body tab-content">

					<div class="tab-pane active" id="systemInformation">
						<h4>System Information</h4>
						{% for information in info %}
							<p><b>{{ information.name }}: </b>{{ information.value }}</p>
						{% endfor %}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}